<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AuthCameraActivity"
    android:background="@drawable/gradient"
    android:id="@+id/camRLayout">

    <com.jukshio.jwccgateapplib.Activities.CameraSourcePreview
        android:id="@+id/previewAuth"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.jukshio.jwccgateapplib.Tracker.GraphicOverlay
            android:id="@+id/faceOverlayAuth"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.jukshio.jwccgateapplib.Activities.CameraSourcePreview>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/preview"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/camera"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>